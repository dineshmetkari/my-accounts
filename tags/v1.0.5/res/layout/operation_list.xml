<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content" >
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/account_balance"
			android:layout_weight="1" android:gravity="right" android:layout_marginRight="5px" android:textSize="30px"/>
		<TextView android:layout_width="wrap_content" 
			android:layout_height="wrap_content" android:id="@+id/lblTotalBalance"
			android:layout_marginRight="5px" android:textSize="30px" android:textStyle="bold"></TextView>
		<TextView android:layout_width="wrap_content" 
			android:layout_height="wrap_content" android:id="@+id/lblTotalCurrency"
			android:layout_marginRight="5px" android:textSize="30px"></TextView>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:background="@color/darkGreen"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content" android:layout_weight="1" 
			android:layout_height="wrap_content" android:id="@+id/lblPeriod"
			android:layout_marginRight="5px"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/lblNbRecord"
			android:layout_marginRight="5px"></TextView>
	</LinearLayout>
	<!-- Balance at end -->
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="#CCCCCC">
		<TextView android:layout_width="wrap_content" android:textColor="#555555"
			android:layout_height="wrap_content" android:id="@+id/lblDateEnd"
			android:layout_weight="1" android:gravity="right"
			android:layout_marginRight="5px" />
		<TextView android:layout_width="wrap_content" android:textColor="#555555"
			android:layout_height="wrap_content" android:id="@+id/lblBalanceEnd"
			android:layout_marginRight="5px"></TextView>
		<TextView android:layout_width="wrap_content" android:textColor="#555555"
			android:layout_height="wrap_content" android:id="@+id/lblCurrencyEnd"
			android:layout_marginRight="5px"></TextView>
	</LinearLayout>
	<ScrollView android:layout_weight="1" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="#FFFFFF">
		<LinearLayout android:id="@+id/operation_list"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="wrap_content">

		</LinearLayout>
	</ScrollView>
	<!-- Balance at start -->
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="#CCCCCC">
		<TextView android:layout_width="wrap_content" android:textColor="#555555"
			android:layout_height="wrap_content" android:id="@+id/lblDateStart"
			android:layout_weight="1" android:gravity="right"
			android:layout_marginRight="5px" />
		<TextView android:layout_width="wrap_content" android:textColor="#555555"
			android:layout_height="wrap_content" android:id="@+id/lblBalanceStart"
			android:layout_marginRight="5px"></TextView>
		<TextView android:layout_width="wrap_content" android:textColor="#555555"
			android:layout_height="wrap_content" android:id="@+id/lblCurrencyStart"
			android:layout_marginRight="5px"></TextView>
	</LinearLayout>
</LinearLayout>
